{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "Model": {
            "type": "object",
            "properties": {
                "Name": {
                    "type": "string"
                },
                "Fields": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Name": {
                                "type": "string"
                            },
                            "RequiredField": {
                                "type": "object",
                                "properties": {
                                    "ErrorMessage": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "ErrorMessage"
                                ]
                            },
                            "StringLength": {
                                "type": "object",
                                "properties": {
                                    "MinimumLength": {
                                        "type": "integer"
                                    },
                                    "MaximumLength": {
                                        "type": "integer"
                                    },
                                    "ErrorMessage": {
                                        "type": "string"
                                    }
                                }
                            },
                            "Column": {
                                "type": "object",
                                "properties": {
                                    "TypeName": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "TypeName"
                                ]
                            },
                            "Type": {
                                "enum": [
                                    "bool",
                                    "byte",
                                    "sbyte",
                                    "char",
                                    "decimal",
                                    "double",
                                    "float",
                                    "int",
                                    "uint",
                                    "nint",
                                    "nuint",
                                    "long",
                                    "ulong",
                                    "short",
                                    "ushort",
                                    "string",
                                    "foreign_key"
                                ]
                            },
                            "DataType": {
                                "enum": [
                                    "CreditCard",
                                    "Currency",
                                    "Custom",
                                    "Date",
                                    "DateTime",
                                    "Duration",
                                    "EmailAddress",
                                    "Html",
                                    "ImageUrl",
                                    "MultilineText",
                                    "Password",
                                    "PhoneNumber",
                                    "PostalCode",
                                    "Text",
                                    "Time",
                                    "Upload",
                                    "Url"
                                ]
                            },
                            "ViewModelVisibility": {
                                "type": "boolean"
                            },
                            "Lenghth": {
                                "type": "integer"
                            },
                            "ForeignKey": {
                                "type": "object",
                                "properties": {
                                    "PropertyName": {
                                        "type": "string"
                                    },
                                    "ModelName": {
                                        "type": "string"
                                    },
                                    "Relationship": {
                                        "enum": [
                                            "OneToOne",
                                            "OneToMany"
                                        ]
                                    }
                                },
                                "required": [
                                    "ModelName",
                                    "Relationship"
                                ]
                            }
                        },
                        "required": [
                            "Name",
                            "Type",
                            "ViewModelVisibility"
                        ]
                    }
                }
            }
        }
    },
    "oneOf": [
        {
            "required": [
                "Model"
            ]
        }
    ]
}