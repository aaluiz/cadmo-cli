{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"Model": {
			"type": "object",
			"properties": {
				"Name": {
					"type": "string"
				},
				"Fields": {
					"type": "array",
					"items": [
						{
							"type": "object",
							"properties": {
								"Name": {
									"type": "string"
								},
								"Required": {
									"type": "boolean"
								},
								"ErrorMessage": {
									"type": "string"
								},
								"Type": {
									"enum": [
										"bool",
										"byte",
										"sbyte",
										"char",
										"decimal",
										"double",
										"float",
										"int",
										"uint",
										"nint",
										"nuint",
										"long",
										"ulong",
										"short",
										"ushort",
										"string"
									]
								},
								"DataType": {
									"enum": [
										"CreditCard",
										"Currency",
										"Custom",
										"Date",
										"DateTime",
										"Duration",
										"EmailAddress",
										"Html",
										"ImageUrl",
										"MultilineText",
										"Password",
										"PhoneNumber",
										"PostalCode",
										"Text",
										"Time",
										"Upload",
										"Url"
									]
								},
								"ViewModelVisibility": {
									"type": "boolean"
								},
								"Lenghth": {
									"type": "integer"
								},
								"ForeignKey": {
									"type": "object",
									"properties": {
										"ModelName": {
											"type": "string"
										},
										"Relationship": {
											"enum": [
												"OneToOne",
												"OneToMany"
											]
										}
									},
									"required": [
										"ModelName",
										"Relationship"
									]
								}
							},
							"required": [
								"Name",
								"Type",
								"ViewModelVisibility"
							]
						}
					]
				}
			}
		}
	},
	"oneOf": [
		{
			"required": [
				"Model"
			]
		}
	]
}